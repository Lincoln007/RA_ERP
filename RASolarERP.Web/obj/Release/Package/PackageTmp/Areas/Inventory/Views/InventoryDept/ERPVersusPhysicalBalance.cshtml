                        $('#ddlStoreLocation').get(0).options[$('#ddlStoreLocation').get(0).options.length] = new Option(item.Display, item.Value);
                        $('#ddlStoreLocation').val(item.IsSerializable);
                    });
                },
                error: function () { alert("Item Does Not Load"); }
