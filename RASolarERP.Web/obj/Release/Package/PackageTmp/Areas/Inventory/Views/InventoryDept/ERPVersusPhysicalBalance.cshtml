                $('#ddlUnit').attr("disabled", false);
                $('#ddlStoreLocation').attr("disabled", false);
                $('#ddlVendor').attr("disabled", true);

                $('#ddlZone').val("");
                $('#ddlRegion').val("");
                $('#ddlUnit').val("");
                $('#ddlVendor').val("");

