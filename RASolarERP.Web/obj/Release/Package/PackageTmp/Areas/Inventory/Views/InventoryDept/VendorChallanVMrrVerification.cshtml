        if (firstTime) {
            e.preventDefault();
            firstTime = false;
        }
        else {
            e.data = {

                locationCode: $("#ddlLocationCode").val(),
                deliveryNoteNo: $("#ddlRREDeliveryNoteNo").val(),
                mrrSequenceNumber: $('#ddlMrrNO').val()
            };
        }
    }

    function onError(e) {
        e.preventDefault();
    }

</script>
