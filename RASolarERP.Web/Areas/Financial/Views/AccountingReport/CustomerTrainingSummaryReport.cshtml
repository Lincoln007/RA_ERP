@{
    ViewBag.Title = "Customer Training Summary Report";
    
    
    Layout = "~/Areas/Financial/Views/Shared/_AccountingLayout.cshtml";
    
     if (false)
    {
    <script src="../../../../Scripts/jquery-1.5.1.min.js" type="text/javascript"></script>
    <script src="../../../../Scripts/RASolarCustomFunction.js" type="text/javascript"></script>   
    <script src="../../../../Scripts/jquery-ui-1.8.11.min.js" type="text/javascript"></script>
    }
    
}
@section TopMenu
{
    @Html.Partial((String)ViewBag.TopMenu)
}
@section LoginInfo
{
 <table cellpadding="0" cellspacing="0" border="0" style="text-align: right;" width="100%">
        <tr>
            <td style="width: 20%" align="left">
                @ViewBag.ZoneTitle&nbsp; @ViewBag.ZoneName
            </td>
            <td style="width: 20%" align="left">
                @ViewBag.RegionTitle&nbsp; @ViewBag.RegionName
            </td>
            <td style="width: 20%" align="left">
                @ViewBag.UnitTitle&nbsp; @ViewBag.UnitName
            </td>
            <td style="width: 40%" align="left">
                @ViewBag.OpenMonthYear
            </td>
        </tr>
    </table>
}

<table cellpadding="0" cellspacing="0" border="0" width="100%">
      <tr>
            <td style="width: 80%;">
                <table cellpadding="2" cellspacing="0" border="0" width="100%">
                    <tr>
                        <td style="width: 15%; padding-top: 7px;">
                            From Date
                        </td>
                        <td style="width: 35%;">
                            @(Html.Telerik().DatePicker()
                            .Name("txtFromDate")
                            .Max(new DateTime(2999, 12, 31))
                            .Format("dd/MM/yyyy")
                            )
                        </td>
                        <td style="width: 15%;">
                            To Date
                        </td>
                        <td style="width: 35%;">
                            @(Html.Telerik().DatePicker()
                             .Name("txtToDate")
                             .Max(new DateTime(2999, 12, 31))
                            .Format("dd/MM/yyyy")
                            )
                        </td>
                    </tr>
                </table>
            </td>
            <td style="width: 20%;">
            </td>
        </tr>
        <tr>
            <td style="width: 80%;">
               
            </td>
            <td style="width: 20%;">
                <input type="submit" id="btnShowTrialBalance" value="Show Summary Report"  onclick="return ReportValidationCheck();"/>
            </td>
        </tr>
        <tr>
        <td colspan="2" style="height:10px;">
        </td>
    </tr>
        <tr>
        <td colspan="2" style="width: 100%;">
            <iframe id="ifrmReportViewer" frameborder="0"  width="1024"; height="1500"; style="overflow:hidden;" scrolling="no"></iframe>
        </td>
    </tr>
    
</table>

<script type="text/javascript">

    function ReportValidationCheck() {

        var url = $('#hdUrl').val();
        var dateFrom = $('#txtFromDate').val();
        var dateTo = $('#txtToDate').val();

        if (dateFrom == "") {
            alert("Please Give From Date.");
        }
        else if (dateTo == "") {
            alert("Please Give To Date.");
        }
        else {

            //url = url + "dpSpYearMonth=" + yearmonth + ",rpYearMonth=" + yearmonth + ",rpStockInTransit=" + stockInTransit;
            //"../Reports/ReportViewerAccountFinance.aspx?rptmode=local&reportname=StatementOfFinancilaPosition&parameters=dpSpYearMonth=" + yearmonth + ",rpYearMonth=" + yearmonth;
            url = "../../Areas/Financial/Reports/ReportViewerAccountFinance.aspx?rptmode=local&reportname=CustomerTrainingSummary&parameters=dpSpdateFrom=" + dateFrom + ",dpSpdateTo=" + dateTo;

            var myframe = document.getElementById("ifrmReportViewer");
            if (myframe !== null) {
                if (myframe.src) {
                    myframe.src = url;
                }
                else if (myframe.contentWindow !== null && myframe.contentWindow.location !== null) {
                    myframe.contentWindow.location = url;
                }
                else { myframe.setAttribute('src', url); }
            }
        }

        return false;
    }

    function RSFMenu(goFor) {
        window.location.replace(Helper.Menu("../../", goFor));
        return false;
    } 


</script>


