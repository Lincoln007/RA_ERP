<script type="text/javascript">

    var firstTime = true;
    function onDataBinding(e) {
        if (firstTime) {
            e.preventDefault();
            firstTime = false;
        }
        else {
            e.data = {
                collectionType: $('#ddlCollectionType').val(),
                customerStatus: $('#ddlCustomerStatus').val(),
                collectionDate: $('#dtpCollectionDate').val()
            };
        }
    }

    function onError(e) {
        e.preventDefault();
    }

</script>
