        </td>
    </tr>
    <tr>
        <td align="left" style="padding-top: 8px;">
            <input id="btnSaveAuditObservation" type="button" value="Save Audit Observation" onclick="return AuditObservation();" />
        </td>
    </tr>
</table>
<script type="text/javascript">
    $('#txtSerialNo').focus();
    $('#serialMessage').text("");

    if ($('#hfInventoryStockUpdateFinishClosed').val() == "True") {
        $('#btnfinishMapping').attr("disabled", true)
    }

    $(document).ready(function () {

        $("#txtSerialNo").keypress(function (event) {
            if (event.keyCode == 13) {
                AddToTable();
            }
        });

        if ($('#hfDeleteFromClientOrDB').val() == "1") {

            LoadSerialList($('#hfItemCode').val(), $('#hfauditObservationQuantity').val());
            $('#txtTotalSerialQuantity').val($('#quantity' + $('#hfItemCode').val()).text());
            $('#txtSerialNo').attr('disabled', true);
            //$('#btnfinishMapping').attr('disabled', true);  // Desabled Temporaly
        }

        $('#serialGrid').delegate('a.deleteBtn', 'click', function () {
            //$(this).parent().parent().fadeOut('slow').remove();
            //alert($(this).parent().parent().find('td:eq(0)').text());

            if (confirm("Do You Want To Delete Serial ?")) {

                var isDeleteFormDB = $('#hfDeleteFromClientOrDB').val();
                var itemCode = $('#hfItemCode').val();

                if (isDeleteFormDB == "1") {
                    DeleteItemSerial($(this).parent().parent().find('td:eq(0)').text(), $(this));
                }
                else {
                    $(this).parent().parent().fadeOut('slow').remove();
                    var totalSerial = parseInt($('#txtTotalSerialQuantity').val());
                    totalSerial = totalSerial - 1;
                    $('#txtTotalSerialQuantity').val(totalSerial);
                    $('#hfTotalItemSerial').val(totalSerial);
                }
                $('#txtSerialNo').focus();
            }

            return false;
        });

    });

    function DeleteItemSerial(itemSerial, aa) {

        var storeLocation = $('#ddlStoreLocation').val();
        var itemCode = $('#hfItemCode').val();
        var itemCategory = $('#ddlItemCategory').val();

        $.ajax({
            type: 'POST',
            url: '@Url.Action("DeleteItemSerial", "InventoryDailyTransaction")',
            data: "{'storeLocation':'" + storeLocation + "','itemCode':'" + itemCode + "','itemSerial':'" + itemSerial + "','itemCategory':'" + itemCategory + "'}",
            contentType: 'application/json;charset=utf-8',
            dataType: 'json',
            cache: false,
            success: function (data) {

                if (data[0].messageCode == "success") {
                    alert(data[0].message);

                    aa.parent().parent().fadeOut('slow').remove();
                    var totalSerial = parseInt($('#txtTotalSerialQuantity').val());

                    totalSerial = totalSerial - 1;
                    $('#txtTotalSerialQuantity').val(totalSerial);
                    $('#quantity' + itemCode).text(totalSerial);
                    $('#serialAlreadyScanQuantity').val(totalSerial);
                }
                else {
                    alert(data[0].message);
                }
            },
            error: function () { alert("Delete Failed. Please Try Again"); }
        });
    }

    function AuditObservation() {
        var itemSerials = "";
        var unCheckItemSerials = "";
        var checkAuditObservation = 0;
        //var lstOtherItemStockWithSerialNoByLocation = new Array();
        $('#serialGrid tbody tr').each(function () {

            if ($(this).find("td:eq(1)").find("input").is(":checked") == true) {
                if (itemSerials != "") {
                    itemSerials = itemSerials + "#" + $(this).find("td:eq(0)").text();
                }
                else {
                    itemSerials = itemSerials + $(this).find("td:eq(0)").text();
                }

                checkAuditObservation++;
            }

            else {
                if (unCheckItemSerials != "") {
                    unCheckItemSerials = unCheckItemSerials + "#" + $(this).find("td:eq(0)").text();
                }
                else {
                    unCheckItemSerials = unCheckItemSerials + $(this).find("td:eq(0)").text();
                }
            }

            //lstOtherItemStockWithSerialNoByLocation.push({

            //    ItemSerialNo: $(this).find("td:eq(0)").text(),
            //    ItemCode: $('#hfItemCode').val()

            //});


        });

        var itemCode = $('#hfItemCode').val();
        var itemCategory = $('#ddlItemCategory').val();
        var storeLocation = $('#ddlStoreLocation').val();
        var auditObservationQty = $('#hfauditObservationQuantity').val();

        //if (itemSerials == "") {
        //    alert("Please Select Audit Observation For Submit");
        //    return false;
        //}

        if (checkAuditObservation != parseInt(auditObservationQty)) {
            alert("Selected serial qty and audit observation qty should be equal. Please Click On Serial Quantity(If Required)");
            return false;
        }

        $.ajax({
            type: "POST",
            url: '@Url.Action("AuditObservationSave","InventoryDailyTransaction")',
            data: "{'itemSerials':'" + itemSerials + "', 'itemCode':'" + itemCode + "','itemCategory':'" + itemCategory + "','storeLocation':'" + storeLocation + "','auditObservationQty':'" + auditObservationQty + "','unCheckItemSerials': '" + unCheckItemSerials + "'}",
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            cache: false,
            success: function (data) {
                if (data[0].messageCode == "success") {
                    alert(data[0].message);
                    ClearAllControl();
                }
                else {
                    alert(data[0].message);
                }
            },
            error: function () {
                alert("Failed to load Item");
            }

        });
    }


